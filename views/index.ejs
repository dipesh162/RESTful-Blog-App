<% include partials/header %>

<div class="ui main header container">
  <div class="ui huge header">RESTful Blog App</div>
     <div class="ui top attached segment">
         <div class="ui divided items">
               <% blogs.forEach(function(blog){%>
               <div class="item">
                   <div class="image">
                       <img style="width:200px; height:200px" src="<%= blog.image %>">
                            <div class="content">
                                <a class="header" href="/blogs/<%= blog._id %>"> <%= blog.title%> </a>
                                <div class="meta">  
                                   <span><%= blog.created.toDateString() %></span>
                                </div>
                             </div>

                              <div class="container">
                                  <p><%- blog.body.substring(0, 100) %>...</p>
                              </div> 
                             
                              <div class="extra">
                                 <a class="ui floated violet basic button" href="/blogs/<%= blog._id %>">
                                    Read More
                                    <i class="right chevron icon"></i>
                                 </a>
                              </div>     
                      </div>
                </div>
                <% }) %>
         </div>
     </div>
</div>     


<% include partials/footer %>