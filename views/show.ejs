<% include partials/header %>

<div class="ui main text container segment">
       <div class="ui huge header"><%= blog.title %></div>
          
          <div class="ui attached ">
                <div class="item">
                    <img class="ui centered rounded image" style="width:200px; height:200px" src="<%= blog.image %>">
                </div>

                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <hr>
                <div class="description" style="margin-bottom: 20px;">
                    <p style="word-break: break-all;"><%- blog.body %></p>
                </div>
                
                <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                <form action="/blogs/<%=blog._id %>?_method=DELETE" method="POST" style="float: right">
                    <button class="ui red inverted button"> Delete </button>
                </form>

        </div>
</div>
          

          
                       
                           



<% include partials/footer %>